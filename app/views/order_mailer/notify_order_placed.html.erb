
<h2>订单明细</h2>
<%# 这里不能用_path，只能用_url，why？ %>
<%=link_to("订单链接",order_url(@order.token))%>
<table class="table table-hover">
	<thead>
		<tr>
			<th scope="col">商品名称</th>
			<th scope="col">商品单价</th>
			<th scope="col">商品数量</th>
      <th scope="col">小计</th>
		</tr>
	</thead>
	<tbody>
    <% @product_lists.each do |productList|%>
  		<tr>
  			<td><%=productList.title%></td>
        <td><%=productList.price%></td>
        <td><%=productList.quantity%></td>
        <td><%=productList.price * productList.quantity%></td>
  		</tr>
		<% end%>
	</tbody>
</table>
<div class="pull-right">
  <span>总计：$<%=@order.totalPrice%></span>
</div>
<hr>
<h2>寄送信息</h2>
订购人
<%=@order.billing_name%>
收货人
<%=@order.shipping_name%> -- <%=@order.shipping_address%>
