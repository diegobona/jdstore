<h3>编辑商品</h3>
<%= simple_form_for [:admin,@product] do |f| %>
 <%= f.input :title,:label =>"商品名称" %>
 <%= f.input :description,:label =>"商品描述" %>
 <%= f.input :price,:label =>"价格" %>
 <%= f.input :quantity,:label =>"数量" %>
 
 <%if @product.product_img.present? %>
   <span>目前商品图</span><br>
   <%= image_tag(@product.product_img.thumb.url) %>
 <%end %>
 
 <%= f.input :product_img,:label =>"上传图片",as: :file %>
 <%= f.submit "提交",class:"btn btn-primary" %>
 
<%end%>