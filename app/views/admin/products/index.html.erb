<h3>商品管理-后台</h3>
<%=link_to("上架商品",new_admin_product_path,class:"btn btn-primary")  %>
<table class="table table-hover">
	<thead>
		<tr>
			<th scope="col">商品图片</th>
			<th scope="col">商品名称</th>
			<th scope="col">商品描述</th>
			<th scope="col">商品价格</th>
			<th scope="col">商品数量</th>
			<th scope="col">操作</th>
		</tr>
	</thead>
	<tbody>
		<% @products.each do |product| %>
		<tr>
			<td><img src= <%=product.product_img.thumb.url  %> style="width:;height:"></td>
			<td><%=product.title  %></td>
			<td><%= product.description %></td>
			<td><%= product.price %></td>
			<td><%= product.quantity %></td>
			<td>
				<%= link_to("编辑",edit_admin_product_path(product)) %>
				<%= link_to("删除",admin_product_path(product),method: :delete,data:{confirm:"确定删除吗"}) %>
			</td>
		</tr>
		<% end%>
	</tbody>
</table>
