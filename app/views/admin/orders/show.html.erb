<h2>订单明细</h2>
订单号<%=@order.id%>
<%# 调用helper函数 %>
<%=render_order_paid_state(@order)%>
<%# 渲染另一个html文件:_state_option.html.erb，并指定其中的变量order %>
<%=render "admin/orders/state_option",order:@order %>
<table class="table table-hover">
	<thead>
		<tr>
			<th scope="col">商品名称</th>
			<th scope="col">单价</th>
			<th scope="col">数量</th>
			<th scope="col">小计</th>
		</tr>
	</thead>
	<tbody>
    <% @product_lists.each do |product_list|%>
  		<tr>
        <td><%=product_list.title%></td>
  			<td><%=product_list.price%></td>
        <td><%=product_list.quantity%></td>
        <td><%=product_list.price*product_list.quantity%></td>
  		</tr>
		<% end%>
	</tbody>
</table>
总计$<%=@order.totalPrice%>
